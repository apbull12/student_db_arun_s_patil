<p id="notice"><%= notice %></p>

<% if @search_result.present? %>
<h2>Students Search result | Total - <%= @search_result.count %></h2>

<table class='table'>
  <thead>
  <tr>
    <th>Full name</th>
    <th>Address</th>
    <th>Mobile</th>
    <th>Institution</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @search_result.each do |student| %>
    <tr>
      <td><%= student.full_name %></td>
      <td><%= student.address %></td>
      <td><%= student.mobile %></td>
      <td><%= student.institution.name %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= will_paginate @search_result %>
<% else %>
  <h2>Results not found...</h2>
<% end %>
